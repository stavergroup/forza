rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read their profiles, write their own
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;

      // Saved slips subcollection - users can only modify their own saved slips
      match /savedSlips/{slipId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Posts are readable by everyone, writable by authenticated users
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Slips are readable by everyone, writable by authenticated users
    match /slips/{slipId} {
      allow read: if true;
      allow create, update: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;

      // Likes subcollection - users can only modify their own likes
      match /likes/{userId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Comments are readable by everyone, writable by authenticated users
    match /comments/{commentId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    match /follows/{followId} {
      allow read: if request.auth != null; // anyone logged in can see followers/following

      // user can create or delete a follow where he is the follower
      allow create: if request.auth != null
                    && request.resource.data.followerId == request.auth.uid;

      allow delete: if request.auth != null
                    && resource.data.followerId == request.auth.uid;
    }

    // User follows - users can only modify their own follows
    match /userFollows/{followId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.followerId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.followerId;
    }

    // Legacy collections (if still in use)
    match /slipLikes/{likeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /slipComments/{commentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Matches collection - readable by authenticated users for search
    match /matches/{matchId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Conversations collection - readable by authenticated users for search
    match /conversations/{conversationId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Groups collection - readable by authenticated users for search
    match /groups/{groupId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}