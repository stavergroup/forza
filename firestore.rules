rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Users can read their profiles, write their own
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;

      // Saved slips subcollection - users can only modify their own saved slips
      match /savedSlips/{slipId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Posts are readable by everyone, writable by authenticated users
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Slips are readable by everyone, writable by authenticated users
    match /slips/{slipId} {
      allow read: if true;
      allow create, update: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;

      // Likes subcollection - users can only modify their own likes
      match /likes/{userId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Comments are readable by everyone, writable by authenticated users
    match /comments/{commentId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    match /follows/{followId} {
      allow read: if request.auth != null; // anyone logged in can see followers/following

      // user can create or delete a follow where he is the follower
      allow create: if request.auth != null
                    && request.resource.data.followerId == request.auth.uid;

      allow delete: if request.auth != null
                    && resource.data.followerId == request.auth.uid;
    }

    // User follows - users can only modify their own follows
    match /userFollows/{followId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.followerId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.followerId;
    }

    // Legacy collections (if still in use)
    match /slipLikes/{likeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /slipComments/{commentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Matches collection - readable by authenticated users for search
    match /matches/{matchId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Conversations collection - readable by authenticated users for search
    match /conversations/{conversationId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Groups collection - readable by authenticated users for search
    match /groups/{groupId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Public rooms read, only authenticated can write messages
    match /chatRooms/{roomId} {
      allow read: if true;
      allow write: if isSignedIn();
      match /messages/{messageId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update, delete: if false;
      }
    }

    // Direct messages â€“ only two participants can read/write
    match /directMessages/{chatId} {
      allow read: if isSignedIn()
        && chatId.matches('^[^_]+_[^_]+$')
        && request.auth.uid in resource.data.users;
      allow create: if isSignedIn()
        && chatId.matches('^[^_]+_[^_]+$')
        && request.auth.uid in request.resource.data.users;
      allow update, delete: if isSignedIn()
        && chatId.matches('^[^_]+_[^_]+$')
        && request.auth.uid in resource.data.users;

      match /messages/{messageId} {
        allow read: if isSignedIn()
          && request.auth.uid in get(/databases/$(database)/documents/directMessages/$(chatId)).data.users;
        allow create: if isSignedIn()
          && request.auth.uid in get(/databases/$(database)/documents/directMessages/$(chatId)).data.users;
        allow update, delete: if isSignedIn()
          && request.auth.uid in get(/databases/$(database)/documents/directMessages/$(chatId)).data.users;
      }
    }

    // Presence
    match /userStatus/{uid} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == uid;
    }

    // Typing (loosely protected, must be signed in)
    match /roomTyping/{docId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /dmTyping/{docId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /rooms/{roomId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
        && request.resource.data.keys().hasAll(["name", "createdBy", "createdAt"]);
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.createdBy;
    }

    match /rooms/{roomId}/messages/{messageId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
        && request.resource.data.keys().hasAll(["text", "senderId", "senderName", "createdAt"]);
    }

    match /dmThreads/{threadId} {
      allow read, update: if request.auth != null
        && request.auth.uid in resource.data.participantIds;
      allow create: if request.auth != null
        && request.resource.data.participantIds.size() == 2
        && request.auth.uid in request.resource.data.participantIds;
    }

    match /dmThreads/{threadId}/messages/{messageId} {
      allow read, create: if request.auth != null
        && request.auth.uid in get(/databases/$(database)/documents/dmThreads/$(threadId)).data.participantIds;
    }
  }
}